# =============================================================================
# KASLITE ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env and configure your local settings
# WARNING: Never commit your actual .env file to version control

# =============================================================================
# EXPERIMENT TRACKING
# =============================================================================
# MLflow tracking URI (local or remote)
MLFLOW_TRACKING_URI=file://./mlruns

# Weights & Biases configuration (optional)
# WANDB_PROJECT=kaslite-experiments
# WANDB_ENTITY=your-wandb-username
# WANDB_API_KEY=your-wandb-api-key

# =============================================================================
# COMPUTE CONFIGURATION
# =============================================================================
# Force CPU usage even if CUDA is available
# CUDA_VISIBLE_DEVICES=""

# PyTorch device preference
# TORCH_DEVICE=cpu

# Number of CPU threads for data loading
# NUM_WORKERS=4

# =============================================================================
# LOGGING & DEBUGGING
# =============================================================================
# Python logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable debug mode for development
# DEBUG=true

# Detailed experiment logging
# VERBOSE_LOGGING=true

# =============================================================================
# DATA PATHS
# =============================================================================
# Base directory for datasets
# DATA_DIR=./data

# Directory for model checkpoints
# CHECKPOINT_DIR=./checkpoints

# Directory for experiment outputs
# OUTPUT_DIR=./results

# =============================================================================
# MODEL CONFIGURATION OVERRIDES
# =============================================================================
# Default model configuration can be overridden here
# MODEL_HIDDEN_DIM=128
# MODEL_BATCH_SIZE=32
# MODEL_LEARNING_RATE=0.001

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable development features
# DEV_MODE=true

# Skip long-running validations in development
# SKIP_VALIDATIONS=true

# Use smaller datasets for faster iteration
# USE_SMALL_DATASETS=true

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Prometheus metrics endpoint port
# PROMETHEUS_PORT=8000

# Enable performance profiling
# ENABLE_PROFILING=false

# Profile output directory
# PROFILE_DIR=./profiles

# =============================================================================
# DOCKER & DEPLOYMENT
# =============================================================================
# Docker image tag for local builds
# DOCKER_TAG=kaslite:latest

# Docker registry for deployment
# DOCKER_REGISTRY=your-registry.com

# Deployment environment (dev, staging, prod)
# ENVIRONMENT=dev
